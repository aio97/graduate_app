<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto my-5 py-4">
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
        <th scope="row"><%= User.human_attribute_name(:gender) %></th>
          <td><%= current_user.gender %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:age_group) %></th>
          <td><%= current_user.age_group %></td>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "編集", edit_profile_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
