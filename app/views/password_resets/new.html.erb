<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto my-5 py-4">
      <%= form_with url: password_resets_path do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-2 text-center">
          <%= f.submit "送信", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
