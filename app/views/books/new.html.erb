 <div class="container pb-5">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto my-5 py-4">
      <%= form_with model: @book, class: "new_book" do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <div class="pb-3">
          <div class="mb-3">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :outline_title %>
            <%= f.text_field :outline_title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :outline_body %>
            <%= f.text_area :outline_body, class: "form-control" %>
          </div>
          <div class="mb-4">
            <%= f.label :image %>
            <%= f.file_field :image, class: "form-control", accept: 'image/*' %>
            <%= f.hidden_field :image_cache %>
          </div>
        </div>
        <div class="row">
          <%= f.fields_for :plans do |plan_form| %>
            <div class="plan mb-3 px-2 py-2 border border-primary-subtle sortable-handle">
              <div class="row">
                <div class="col-md-3 mb-3">
                  <%= plan_form.date_field :date, class: "form-control" %>
                </div>
	              <div class="col-md-9 mb-3">
	                <%= plan_form.text_field :title, class: "form-control", placeholder: "タイトル" %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-3 mb-3">
                  <%= plan_form.time_field :start_time, class: "form-control" %>
                </div>
	              <div class="col-md-9 mb-3">
	                <%= plan_form.text_field :location, class: "form-control", placeholder: "場所" %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-1 mb-3 text-end">
                  ～
                </div>
                <div class="col-md-3 mb-3">
                  ~<%= plan_form.time_field :end_time, class: "form-control" %>
                </div>
	              <div class="col-md-9 mb-3">
	                <%= plan_form.text_area :detail, class: "form-control", placeholder: "詳細" %>
                </div>
              </div>
              <div class="row d-flex justify-content-end">
	              <div class="col-md-9 mb-3">
	                <%= plan_form.text_area :memo, class: "form-control", placeholder: "メモ（公開されません）" %>
                </div>
              </div>
              <div class="text-end">
                <%= link_to plan_path(plan_form.object), data: { turbo_method: :delete, turbo_confirm: "このプランを削除しますか？" } do %>
                <i class="bi bi-trash-fill icon-lg"></i>
              </div>
            <% end %>
      </div>
	          </div>
          <% end %>

          <div id="add-container"></div>

          <div class="d-grid gap-2 mb-5">
            <button class="btn btn-primary" id="add-plan-button" type="button">
              プラン追加
            </button>
          </div>
        </div>

        <div class="mb-2 text-center">
          <%= f.check_box :is_public, checked: false %>
          <%= f.label :is_public, "公開する" %>
        </div>

        <div class=" mb-4 text-center">
          <%= f.submit "登録", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
