<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto my-5 py-4">
      <%= form_with model: @book, class: "new_book" do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        表紙
        <div class="pb-3">
          <div class="mb-3">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= f.label :outline_title %>
            <%= f.text_field :outline_title, class: "form-control" %>
          </div>
          <div class="mb-4">
            <%= f.label :outline_body %>
            <%= f.text_area :outline_body, class: "form-control" %>
          </div>
        </div>
        <div class="mb-3">
          プラン
          <div class="col-md-3 mb-3">
            <%= f.date_field :plan_date, class: "form-control" %>
          </div>
          <div class="plan px-2 py-2 border border-primary">
            <div class="row">
              <div class="col-md-3 mb-3">
	              <%= f.time_field :plan_start_time, class: "form-control" %>
	            </div>
	            <div class="col-md-9 mb-3">
	              <%= f.text_field :plan_title, class: "form-control", placeholder: "タイトル" %>
	            </div>
            </div>
	          <div class="col-md-9 mb-3 offset-md-3">
	            <%= f.text_area :plan_detail, class: "form-control", placeholder: "詳細" %>
	          </div>
	        </div>
        </div>

        <div class="mb-3 text-center">
          <div class="btn-group" role="group" aria-label="Public/Private settings">
            <button type="button" class="btn btn-outline-primary active" id="public-btn">公開</button>
            <button type="button" class="btn btn-outline-primary" id="private-btn">非公開</button>
          </div>
          <%= f.hidden_field :is_public, value: true, id: "is_public_field" %>
        </div>

        <div class="mt-5 mb-2 text-center">
          <%= f.submit "登録", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>